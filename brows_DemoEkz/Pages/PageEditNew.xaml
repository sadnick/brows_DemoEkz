<Page x:Class="brows_DemoEkz.Pages.PageEditNew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:brows_DemoEkz.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEdit">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите название: "
                           Style="{StaticResource mainTxtb}"/>
                <TextBox Name ="TxtTitle"
                           Style="{StaticResource mainTxt}" Width="249" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Цена: "
                                   Style="{StaticResource mainTxtb}"/>
                <TextBox Name ="TxtCost"
                           Style="{StaticResource mainTxt}" Width="249"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Описание: "
                                   Style="{StaticResource mainTxtb}"/>
                <TextBox Name ="TxtDescription"
                           Style="{StaticResource mainTxt}" Width="249"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фотографии товара: "
                                   Style="{StaticResource mainTxtb}"/>
                <TextBox Name ="TxtImage"
                           Style="{StaticResource mainTxt}" Width="249"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выберите производителя: "
                           Style="{StaticResource mainTxtb}"/>
                <ComboBox Name ="CmbxOwner"
                           Style="{StaticResource mainCmbx}" Width="249"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RbActive"
                             Content="Доступен"
                             Style="{StaticResource dfltRB}"/>
                <RadioButton x:Name="RbNotActive"
                             Content="Не доступен"
                             Style="{StaticResource dfltRB}"/>
            </StackPanel>
            <Button Name="BtnSave"
                    Click="BtnSave_Click"
                    Style="{StaticResource mainBtn}"
                    Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Page>
